generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model authors {
  id           BigInt   @id(map: "authors_pk") @default(autoincrement())
  author       String
  pronouns_id  String?
  display_name String?
  publickey    String?
  privatekey   String?
  summary      String?
  icon         Json?
  header       Json?
  properties   Json?
  published    String?
  cat          Boolean?
  account_type String
  domain       String?
  updated      String?
  uri          String?
  url          String?
  inbox        String?
  outbox       String?
  following    String?
  followers    String?
  shared       String?

  @@unique([author, domain], map: "authors_un")
}

model links {
  id   BigInt  @id @default(autoincrement())
  page String
  icon String?
  text String?
  url  String
}

model posts {
  id        BigInt  @id(map: "posts_pk") @default(autoincrement())
  published String
  slug      String  @unique(map: "posts_un")
  author    BigInt
  sensitive Boolean @default(false)
  content   String
  tag       Json?
}
